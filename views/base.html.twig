			{% block navbar %}
				<div class="navbar navbar-default navbar-fixed-top" role="navigation">
				  <div class="container-fluid">
					<div class="navbar-header">
					  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					  </button>
					  <a class="navbar-brand" href="{{ path('index') }}" data-instant>
                        <img src="{{ cdn_asset('/assets/images/logo.png') }}" />Scrolls Tournaments
                      </a>
					</div>
					<div class="navbar-collapse collapse">
					  
					  <ul class="nav navbar-nav navbar-right">

						<li class="dropdown">

						  <li class="dropdown">
							  <a href="#" class="dropdown-toggle" data-toggle="dropdown">More <b class="caret"></b></a>
							  <ul class="dropdown-menu">
								  <li class="divider"></li>
								  <li class="dropdown-header">External</li>
								  <li><a href="http://www.scrollsguide.com/forum" target="_blank"><div><i class="fa fa-{{ categoryIcon('forum') }}"></i></div> Forum</a></li>
								  <li><a href="http://www.scrollsguide.com/wiki/index.php/Main_Page" target="_blank"><div><i class="fa fa-{{ categoryIcon('wiki') }}"></i></div> Wiki</a></li>
							  </ul>
						  </li>

						</li>
					  </ul>
					</div><!--/.nav-collapse -->
				  </div>
				</div>
			{% endblock %}

            {% block content %}
		
			{% endblock %}


            <div class="footer">
                <div class="row">
                    <hr />
				    
					<div class="col-xs-12 footer-copy"><span>&copy; Scrolls Tournaments 2014</span>
					
					<p class="pull-right">
						<iframe src="{{ cdn_asset('/assets/html/github-btn.html?user=Scrollsguide&repo=ScrollsTournaments&type=watch&count=true') }}"
									allowtransparency="true" frameborder="0" scrolling="0" width="78" height="20"></iframe></p>
					
					</div>
					
                </div>
            </div>

        </div>

